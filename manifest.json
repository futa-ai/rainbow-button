{
    "name": "rainbow-button",
    "version": "0.1.0",
    "manifest_version": 3,
    "description": "ブラウザ上のボタンが虹色に光ります",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [{
        "matches": [ "http://*/*", "https://*/*" ],
        "css": ["style.css"]
    }],
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": ["storage"]
}
